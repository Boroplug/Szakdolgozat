<!DOCTYPE html>
<html lang="en" dir="ltr">
	{% include 'adminheader.html.twig' %}
	<body>

		<!-- tap on top start -->
		<div class="tap-top">
			<span class="lnr lnr-chevron-up"></span>
		</div>
		<!-- tap on tap end -->

		<!-- page-wrapper start -->
		<div
			class="page-wrapper compact-wrapper dark-sidebar" id="pageWrapper">
			<!-- Page Header start -->
			{% include 'pageheader.html.twig' %}
			<!-- Page Header end -->

			<!-- Page Body start -->
				<div
				class="page-body-wrapper"> <!-- Page Sidebar Start-->
				{% include 'sidebar.html.twig' %}
				<!-- Page Sidebar Ends-->

				<div class="page-body">
					<div class="title-header">
						<h5>Új termék
						</h5>
					</div>

					<!-- New Product Add Start -->

					<div class="container-fluid">
						<div class="row">
							<div class="col-12">
								<form action="/cipoEdit" method="POST" class="theme-form theme-form-2 mega-form">
									<div class="row">
										<div class="col-sm-12">
											<div class="card">
												<div class="card-body">
													<div class="card-header-2">
														<h5>Termék Információk</h5>
													</div>


													<div class="row">
														<div class="mb-4 row align-items-center">
															<input type="hidden" value="{{ product.id }}" name="id">
															<label class="form-label-title col-sm-2 mb-0">Termék Megnevezése</label>
															<div class="col-sm-10">
																<input type="text" class="form-control" name="megnevezes" id="megnevezes" value="{{product.megnevezes}}" placeholder="Megnevezés" required>
															</div>
														</div>

														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Állapota</label>
															<div class="col-sm-10">
																<select class="form-select" name="cipoallapot" id="cipoallapot">
																	{% for allapot in allapotok %}
																		<option value="{{allapot.id}}" {{ allapot.id == product.allapot_id ? 'selected':''}}>{{allapot.megnevezes}}</option>

																	{% endfor %}
																</select>
															</div>
														</div>

														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Márka</label>
															<div class="col-sm-10">
																<select class="form-select" name="marka" id="marka">
																	{% for marka in markak %}
																		<option value="{{marka.id}}" {{ marka.id == product.marka_id ? 'selected':''}}>{{marka.markanev}}</option>
																	{% endfor %}
																</select>
															</div>
														</div>

														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Méret</label>
															<div class="col-sm-10">
																<div class="form-group">
																	<input type="number" class="form-control" min="0" step="1" name="meret" id="meret" value="{{product.meret}}" placeholder="Méret" required>
																</div>
															</div>
														</div>

														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Ár</label>
															<div class="col-sm-10">
																<div class="form-group">
																	<input type="number" class="form-control" min="0" step="1" name="ar" id="ar" value="{{product.ar}}" placeholder="Méret" required>
																</div>
															</div>
														</div>

														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Elérhető Mennyiség</label>
															<div class="col-sm-10">
																<input type="number" class="form-control" min="0" step="1" name="elerheto" id="elerheto" value="{{product.elerheto}}" placeholder="Elérhető mennyiség" required>
															</div>
														</div>
														<div class="mb-4 row align-items-center">
															<label class="col-sm-2 col-form-label form-label-title">Törölt</label>
															<div class="col-sm-10">
																<div class="form-group">
																	<input type="checkbox" name="torolt" id="torolt" {{ product.torolt ? 'checked':''}}>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>

										</div>

										<div class="card">
											<div class="card-body">
												<div class="card-header-2">
													<h5>Leírás</h5>
												</div>


												<div class="row">
													<div class="col-12">
														<div class="row">
															<label class="form-label-title col-sm-2 mb-0">Termék Leírás</label>
															<div class="col-sm-10">
																<input type="text" class="form-control" name="leiras" id="leiras" value="{{product.leiras}}" placeholder="Termék Leírás" required>
															</div>
														</div>
													</div>
												</div>

											</div>
										</div>

										<div class="card">
											<div class="card-body">
												<div class="card-header-2">

													<h5>Termék Képek</h5>
												</div>


												<div class="row">
													<div class="mb-4 row align-items-center">
														<label class="col-sm-2 col-form-label form-label-title">Főkép</label>
														<div class="col-sm-10">

															<input type="file" name="fnev" class="form-control form-choose" accept="fnev/jpg, fnev/jpeg, fnev/png, fnev/webp" value="{{product.fnev}}">

														</div>
													</div>

													<div class="row align-items-center">
														<label class="col-sm-2 col-form-label form-label-title">További Képek
														</label>
														<div class="col-sm-10">
															<input type="file" name="fnev2" class="form-control form-choose" accept="fnev2/jpg, fnev2/jpeg, fnev2/png, fnev2/webp" value="{{product.fnev2}}">
															<input type="file" name="fnev3" class="form-control form-choose" accept="fnev3/jpg, fnev3/jpeg, fnev3/png, fnev3/webp" value="{{product.fnev3}}">
															<input type="file" name="fnev4" class="form-control form-choose" accept="fnev4/jpg, fnev4/jpeg, fnev4/png, fnev4/webp" value="{{product.fnev4}}">
															<input type="file" name="fnev5" class="form-control form-choose" accept="fnev5/jpg, fnev5/jpeg, fnev5/png, fnev5/webp" value="{{product.fnev5}}">
														</div>
													</div>

												</div>


											</div>

										</div>

										<div class="card">
											<div class="card-body">
												<div class="card-header-2">
													<h5>Feltöltés</h5>
												</div>


												<style>
													.Center {
														text-align: center;

													}

													.feltoltes {
														color: white;
														background-color: #484848;
														width: 30%;
														height: 50px;
														font-size: 30px;

													}
												</style>
												<div class="Center">


													<button type="submit" value="Feltöltés" class="feltoltes" name="update">
														<i class="fa-solid fa-floppy-disk"></i>
														Feltöltés</button>
												</form>


											</div>

										</div>


									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- New Product Add End -->

		<!-- footer Start -->
		<div class="container-fluid">
			<footer class="footer">
				<div class="row"></div>
			</div>
		</footer>
	</body>
</html></div><!-- footer En --></div><!-- Container-fluid End --></div><!-- Page Body End --></div><!-- page-wrapper End -->


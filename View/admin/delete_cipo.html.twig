<!DOCTYPE html>
<html lang="en">
	{% include 'adminheader.html.twig' %}


	<body>


		


		<div class="container mt-5 d-flex justify-content-center">
			<h1 class="display-5 text-center">Cipő törlés</h1>
		</div>
		<div class="container d-flex align-item-center justify-content-center">
			<div class="row">
				<form action="/cipoDelete" method="POST">
					<input type="hidden" value="{{product.id}}" name="id">
					<div class="d-flex pt-5">
						<a href="javascript:history.go(-1)" class="btn btn-warning mt-5">
							<i class="fa-solid fa-arrow-left"></i>
							VISSZA
						</a>
						<h3>Azonosító:
							{{product.id}}</h3>
						<button type="submit" class="btn btn-danger text-white mt-5" name="delete">
							<i class="fa-solid fa-trash"></i>
							TÖRÖL
						</button>
					</div>
				</form>
			</div>
		</div>

	</body>

</html>

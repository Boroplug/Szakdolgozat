<!DOCTYPE html>
<html lang="en">
	{% include 'links.html.twig' %}


	<body class="theme-color2 light ltr">

		{% include 'header.html.twig' %}
		<!-- Log In Section Start -->

		<div class="login-section">
			<div>
				{% if error %}

					<script>
						Swal.fire({icon: 'error', title: 'Oops...', text: '{{ error|e('js') }}'});
					</script>
				{% endif %}


			</div>

			<div class="materialContainer">
				<div class="box">
					<div class="login-title">
						<h2>Belépés</h2>
					</div>
					<form action="/login" method="POST">
						<div class="input">
							<label for="email">Email-cím</label>
							<input type="text" name="email" id="email" required>
							<span class="spin"></span>
							<div class="valid-feedback">
								Adja meg a korábban használt email-címét
							</div>
						</div>
						<div class="input">
							<label for="password">Jelszó</label>
							<input type="password" name="password" id="password">
							<span class="spin"></span>
						</div>
						 <a href="/frogotten" class="pass-forgot">Elfelejtette a jelszavát?</a>
						<div class="button login">
							<button type="submit">
								<span>Belépés</span>
								<i class="fa fa-check"></i>
							</button>
						</div>
					</form>
					<p>Még nincs fiókja?
						<a href="/register" class="theme-color">Regisztrálok</a>
					</p>
				</div>
			</div>
		</div>
		<!-- Log In Section End -->

		<!-- theme Setting Start -->
		<div class="theme-setting">
			<ul>
				<li>
					<button id="darkButton" class="btn btn-sm ">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon-stars-fill" viewbox="0 0 16 16">
